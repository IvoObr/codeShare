{
    "name": "ssl-renewal",
    "version": "1.0.0",
    "scripts": {
        "clean": "rm -rf ./dist/ && mkdir dist",
        "copy": "cp ./.env ./dist/",
        "build": "npm run clean && npm run copy && tsc --build tsconfig.json",
        "eslint-fix": "eslint . --ext .ts --fix",
        "start": "node -r ./dist ",
        "dev": "nodemon src/index.ts --delay 1"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "ignore": [
            "src/public"
        ]
    },
    "eslintIgnore": [
        "dist/",
        "build.ts",
        "node_modules/"
    ],
    "dependencies": {
        "@7dev-works/logger": "^2.2.4",
        "colors": "^1.4.0",
        "dotenv": "^8.2.0"
    },
    "devDependencies": {
        "@types/node": "^14.14.9",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.13.0",
        "nodemon": "^2.0.7",
        "ts-node": "^10.0.0",
        "typescript": "^4.1.2"
    }
}
