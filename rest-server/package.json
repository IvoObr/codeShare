{
    "name": "rest-server",
    "version": "1.0.0",
    "scripts": {
        "clean": "rm -rf ./dist/ && mkdir dist",
        "copy": "cp -r ./src/public ./dist/public &&  cp -r ./src/views ./dist/views && cp ./.env ./dist/ && cp -r ../ssl ./dist/ssl",
        "build": "npm run clean && npm run copy && tsc --build tsconfig.prod.json",
        "start": "node -r module-alias/register ./dist ",
        "dev": "nodemon development --delay 1"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "ignore": [
            "src/public"
        ],
        "exec": "ts-node -r tsconfig-paths/register ./src"
    },
    "_moduleAliases": {
        "@db": "dist/db/",
        "@lib": "dist/lib/",
        "@utils": "dist/utils/",
        "@server": "dist/Server",
        "@routers": "dist/routers/",
        "@services": "dist/services/",
        "@entities": "dist/entities/"
    },
    "dependencies": {
        "@7util/log-express": "^1.0.5",
        "@7util/logger": "^2.2.4",
        "bcrypt": "^5.0.0",
        "colors": "^1.4.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^4.2.0",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "mongodb": "^3.6.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.9",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongodb": "^3.5.34",
        "@types/node": "^14.14.9",
        "nodemon": "^2.0.7",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.2"
    }
}
