{
    "name": "server",
    "version": "0.0.0",
    "scripts": {
        "clean": "rm -rf ./dist/; mkdir dist",
        "copy": "cp -r ./src/public ./dist/public;  cp -r ./src/views ./dist/views; cp -r ./env ./dist/env",
        "build": "npm run clean && npm run copy && tsc --build tsconfig.prod.json",
        "eslint-fix": "eslint . --ext .ts --fix",
        "start": "node -r module-alias/register ./dist --env=production",
        "dev": "nodemon --delay 4",
        "test": "nodemon --delay 1 --config ./_tests_/nodemon.json"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "ignore": [
            "src/public"
        ],
        "exec": "ts-node -r tsconfig-paths/register ./src"
    },
    "jest": {
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        }
    },
    "_moduleAliases": {
        "@db": "dist/db",
        "@dals": "dist/dals",
        "@server": "dist/Server",
        "@routes": "dist/routes",
        "@enums": "dist/lib/enums",
        "@logger": "dist/lib/logger",
        "@entities": "dist/entities",
        "@helpers": "dist/lib/helpers",
        "@interfaces": "dist/lib/interfaces",
        "@constants": "dist/lib/constants",
        "@functions": "dist/lib/functions"
    },
    "eslintIgnore": [
        "src/public/",
        "dist/",
        "build.ts",
        "node_modules/"
    ],
    "dependencies": {
        "@7dev-works/logger": "^2.1.3",
        "@types/axios": "^0.14.0",
        "@types/cors": "^2.8.8",
        "@types/jest": "^26.0.15",
        "@types/validator": "^13.1.3",
        "axios": "^0.21.0",
        "bcrypt": "^5.0.0",
        "colors": "^1.4.0",
        "command-line-args": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^4.2.0",
        "jest": "^26.6.3",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "mongodb": "^3.6.3",
        "morgan": "^1.10.0",
        "nodemon": "^2.0.7",
        "ts-jest": "^26.4.4",
        "validator": "^13.5.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/command-line-args": "^5.0.0",
        "@types/express": "^4.17.9",
        "@types/fs-extra": "^9.0.4",
        "@types/jsonfile": "^6.0.0",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongodb": "^3.5.34",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.9",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.13.0",
        "fs-extra": "^9.0.1",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.2"
    }
}
