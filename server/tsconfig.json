{
  "compilerOptions": {
  "target": "es6",
  "module": "commonjs",
  "outDir": "dist",
  "strict": true,
  "baseUrl": "./",
  "noEmit": false,
  "inlineSourceMap": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "paths": {
    "@db": ["src/db/"],
    "@lib": ["src/lib/"],
    "@utils": ["src/utils/"],
    "@server": ["src/Server"],
    "@routers": ["src/routers/"],
    "@services": ["src/services/"],      
    "@entities": ["src/entities/"]
    },
  },
  "include": ["src/**/*.ts","_tests_/**/*.ts"],
  "exclude": ["src/public/", "dist/"]
}